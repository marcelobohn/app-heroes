<!DOCTYPE html>
<html>
  <head>
    <title>Heros</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-lg navbar-light bg-light">
      <%= link_to "Home", root_path, :class => "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item ">
            <%= link_to "Hero",heros_path, :class => "nav-link" %>
          </li>  
        </ul>
        <%= form_tag(root_path, method: 'get', class: 'form-inline my-2 my-lg-0') do %>
          <%= search_field_tag 'search', nil, class: 'form-control form-control-sm mr-sm-2', placeholder: 'Search'  %>
          <%= submit_tag "Submit", class: 'btn btn-sm btn-outline-success my-2 my-sm-0', :name => nil %>
        <% end %>               
      </div>
    </nav>

    <% if notice %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>      
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
