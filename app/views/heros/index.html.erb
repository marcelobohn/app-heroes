<h1>Heros</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th>Birthday</th>
      <th>Movies</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @heros.each do |hero| %>
      <tr>
        <td><%= hero.name %></td>
        <td><%= hero.bio %></td>
        <td><%= hero.birthday %></td>
        <td><%= hero.movies %></td>
        <td>
          <%= link_to 'Show', hero, class: 'btn btn-info btn-sm'  %>
          <%= link_to 'Edit', edit_hero_path(hero), class: 'btn btn-success btn-sm' %>
          <%= link_to 'Destroy', hero, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hero', new_hero_path, class: 'btn btn-primary btn-sm' %>
