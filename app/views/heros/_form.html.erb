<%= form_with(model: hero, local: true) do |form| %>
  <% if hero.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(hero.errors.count, "error") %> prohibited this hero from being saved:</h2>

      <ul>
        <% hero.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: "col-12 col-sm-3 col-md-3 col-lg-2 col-xl-2 col-form-label"  %>
    <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
      <%= form.text_field :name, class: "form-control form-control-sm" %>
    </div>  
  </div>

  <div class="form-group row">
    <%= form.label :bio, class: "col-12 col-sm-3 col-md-3 col-lg-2 col-xl-2 col-form-label"  %>
    <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
      <%= form.text_field :bio, class: "form-control form-control-sm" %>
    </div>  
  </div>

  <div class="form-group row">
    <%= form.label :birthday, class: "col-12 col-sm-3 col-md-3 col-lg-2 col-xl-2 col-form-label"  %>
    <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
      <%= form.date_field :birthday, class: "form-control form-control-sm" %>
    </div>  
  </div>  

  <div class="form-group row">
    <%= form.label :movies, class: "col-12 col-sm-3 col-md-3 col-lg-2 col-xl-2 col-form-label"  %>
    <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
      <%= form.text_field :movies, class: "form-control form-control-sm" %>
    </div>  
  </div>  

  <div class="actions">
    <%= form.submit class: 'btn btn-success btn-sm' %>
  </div>
<% end %>
