<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= hero.name %></h5>
    <% if hero.files.first %>
      <%= link_to image_tag(hero.files.first, width: 200, class: 'float-right', style: 'margin-right: 12px;', alt: ''), hero %>
    <% else %>
      <%= link_to image_tag('avatar_default.jpg', width: 200, class: 'float-right', style: 'margin-right: 12px;', alt: ''), hero %>
    <% end %>
  </div>
</div>